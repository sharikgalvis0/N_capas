@{
}

<h2>Editar Rol</h2>
<div class="frmContainer">
    <form method="post" asp-action="ActualizarRole" asp-controller="Role" id="frmEditarRole" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <input type="hidden" class="form-control" id="Id" name="Id" value="@Model.Id">
        </div>

        <div class="form-group">
            <label for="Nombre">Nombre</label>
            <input type="text" class="form-control" id="Nombre" name="Nombre" value="@(Model.Nombre)">
        </div>
        <br />
        <div class="form-group">
            <label for="Descripcion">Descripción</label>
            <input type="text" class="form-control" id="Descripcion" name="Descripcion" value="@(Model.Descripcion)">
        </div>
        <br />
        <div class="form-group">
            <label for="Activo">Activo</label>
            <input type="text" class="form-control" id="Activo" name="Activo" value="@(Model.Activo)">
        </div>
        <br />


        <br />

        <div class="modal-footer">
            <a type="button" class="btn btn-secondary" href="@Url.Action("Index", "Role")">Volver</a>
            <button type="submit" class="btn btn-primary" id="btnActualizarRole">Actualizar</button>
        </div>
    </form>
</div>

