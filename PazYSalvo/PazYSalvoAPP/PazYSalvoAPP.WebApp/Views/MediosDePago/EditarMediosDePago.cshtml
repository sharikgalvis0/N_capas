@using PazYSalvoAPP.Models;

@model PazYSalvoAPP.WebApp.Models.ViewModels.MediosDePagoViewModel

@{
}

<h2>Editar medios de pago</h2>
<div class="frmContainer">
    <form method="post" asp-action="ActualizarMediosDePago" asp-controller="MediosDePago" id="frmEditarMediosDePago" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <input type="hidden" class="form-control" id="Id" name="Id" value="@Model.Id">
        </div>

        <div class="form-group">
            <label for="Nombre">Nombre</label>
            <input type="text" class="form-control" id="Nombre" name="Nombre" value="@(Model.Nombre)">
        </div>
        <br />
        <div class="form-group">
            <label for="Descripcion">Descripcion</label>
            <input type="text" class="form-control" id="Descripcion" name="Descripcion" value="@(Model.Descripcion)">
        </div>
        

        <br />

        <div class="modal-footer">
            <a type="button" class="btn btn-secondary" href="@Url.Action("Index", "MediosDePago")">Volver</a>
            <button type="submit" class="btn btn-primary" id="btnActualizarMediosDePago">Actualizar</button>
        </div>
    </form>
</div>

