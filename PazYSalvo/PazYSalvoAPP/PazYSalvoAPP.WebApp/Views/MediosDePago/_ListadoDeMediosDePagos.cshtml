@{
}
<h3>Medios de pago</h3>


<hr />
<div class="container">

    <table class="table table-striped" id="tblMediosDePagos">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Descripcion</th>
                

                <th>Opciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {

                <tr>
                    <th>@item.Nombre</th>
                    <td>@item.Descripcion</td>
                    


                    <td>
                        <a class="btn btn-info btn-sm btnEditarMediosDePago" href="@Url.Action("EditarMediosDePago", "MediosDePago", new { id = item.Id })">Editar</a>
                        <a class="btn btn-warning btn-sm disabled">Eliminar</a>
                    </td>
                </tr>
            }


        </tbody>
    </table>
</div>