@{
}

<h3>Listado de clientes</h3>

<hr />
<div class="container">

    <table class="table table-striped" id="tblClientes">
        <thead>
            <tr>
                <th>PersonaId</th>
                <th>RolId</th>

                <th>Opciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {

                <tr>
                    <th>@item.PersonaId</th>
                    <td>@item.RolId</td>
                   
                    <td>
                        <a class="btn btn-info btn-sm btnEditarCliente" href="@Url.Action("EditarCliente", "Cliente", new { id = item.Id })">Editar</a>
                        <a class="btn btn-warning btn-sm disabled">Eliminar</a>
                    </td>
                </tr>
            }


        </tbody>
    </table>
</div>

